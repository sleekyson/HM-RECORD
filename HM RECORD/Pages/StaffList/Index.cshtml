@page
@model HM_RECORD.Pages.StaffList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Staff List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Staff</a>
    </div>
    <div class="col-3">
        <a asp-page="Upsert" class="btn btn-info form-control text-white">Add(Upsert)New Staff</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Staffs.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-primary">
                        <th>
                            <label asp-for="Staffs.FirstOrDefault().Surname"></label>
                        </th>
                        <th>
                            <label asp-for="Staffs.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>.Staffs.FirstOrDefault().Gender)*@
                            <label asp-for="Staffs.FirstOrDefault().Gender"></label>
                        </th>
                        <th>
                            <label asp-for="Staffs.FirstOrDefault().PhoneNo"></label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Staffs)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.PhoneNo)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onClick="return confirm('Are you sure you want to Delete')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Staffs has been registered</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-stripped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Surname</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>PhoneNo</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/staffList.js"></script>
 }


