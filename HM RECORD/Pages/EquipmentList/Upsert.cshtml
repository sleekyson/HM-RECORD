@page
@model HM_RECORD.Pages.EquipmentList.UpsertModel


<br />
<h2 class="text-info">@(Model.Equipment.Id!=0? "Edit": "Add") Equipment</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Equipment.Id != 0)
        {
            <input type="hidden" asp-for="Equipment.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Equipment.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Equipment.Name" class="form-control" />
            </div>
            <span asp-validation-for="Equipment.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Equipment.WardLocation"></label>
            </div>
            <div class="col-6">
                <input asp-for="Equipment.WardLocation" class="form-control" />
            </div>
            <span asp-validation-for="Equipment.WardLocation" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Equipment.Number"></label>
            </div>
            <div class="col-6">
                <input asp-for="Equipment.Number" class="form-control" />
            </div>
            <span asp-validation-for="Equipment.Number" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Equipment.Id!=0? "Update": "Add")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


