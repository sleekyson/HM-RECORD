@page
@model HM_RECORD.Pages.EquipmentList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Equipment List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Add New Equipment</a>
    </div>
    <div class="col-3">
        <a asp-page="Upsert" class="btn btn-info form-control text-white">Add(Upsert)New Equipment</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Equipments.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-primary">
                        <th>
                            <label asp-for="Equipments.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>.Equipments.FirstOrDefault().WardLocation)*@
                            <label asp-for="Equipments.FirstOrDefault().WardLocation"></label>
                        </th>
                        <th>
                            <label asp-for="Equipments.FirstOrDefault().Number"></label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Equipments)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.WardLocation)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Number)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onClick="return confirm('Are you sure you want to Delete')" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-primary btn-sm text-white"><i class="fas fa-pen mr-1"></i>Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Equipments has been added</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-stripped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>WardLocation</th>
                    <th>Number</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/equipmentList.js"></script>
}
